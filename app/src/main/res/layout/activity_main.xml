<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/player1"
        android:layout_marginLeft="3dp"
        android:text="GRACZE"
        android:textColor="@color/second"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/player1"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/player2"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="@color/second"
        />
    <EditText
        android:id="@+id/player2"
        android:layout_toLeftOf="@id/player3"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="@color/second"
        />
    <EditText
        android:id="@+id/player3"
        android:layout_toLeftOf="@id/player4"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="@color/second"
        />
    <EditText
        android:id="@+id/player4"
        android:layout_toLeftOf="@id/player5"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="@color/second"
        />
    <EditText
        android:id="@+id/player5"
        android:layout_toLeftOf="@id/player6"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="@color/second"
        />
    <EditText
        android:id="@+id/player6"
        android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textColor="@color/second"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:text="KTO?"
        android:textColor="@color/second"
        android:textSize="18sp"
        android:textStyle="bold"  />

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="3dp"
        android:text="GREEN"
        android:textColor="@color/main"
        android:background="@color/second"
        android:textSize="16sp"
        android:textStyle="bold"  />
    <Button
        android:id="@+id/button16"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/second"/>
    <Button
        android:id="@+id/button15"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_toLeftOf="@+id/button16"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/second"/>
    <Button
        android:id="@+id/button14"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_toLeftOf="@+id/button15"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/second"/>
    <Button
        android:id="@+id/button13"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_toLeftOf="@+id/button14"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/second"/>
    <Button
        android:id="@+id/button12"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_toLeftOf="@+id/button13"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/second"/>
    <Button
        android:id="@+id/button11"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_toLeftOf="@+id/button12"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/second"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="3dp"
        android:text="MUSTARD"
        android:textColor="@color/main"
        android:background="@color/second"
        android:textSize="16sp"
        android:textStyle="bold"  />
    <TextView
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="3dp"
        android:text="ORCHID"
        android:textColor="@color/main"
        android:background="@color/second"
        android:textSize="16sp"
        android:textStyle="bold"  />
    <TextView
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="3dp"
        android:text="PEACOCK"
        android:textColor="@color/main"
        android:background="@color/second"
        android:textSize="16sp"
        android:textStyle="bold"  />
    <TextView
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="3dp"
        android:text="PLUM"
        android:textColor="@color/main"
        android:background="@color/second"
        android:textSize="16sp"
        android:textStyle="bold"  />
    <TextView
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:paddingLeft="3dp"
        android:text="SCARLETT"
        android:textColor="@color/main"
        android:background="@color/second"
        android:textSize="16sp"
        android:textStyle="bold"  />
</RelativeLayout>